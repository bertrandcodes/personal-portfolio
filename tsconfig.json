{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@src/*": ["src/*"],
      "@components": ["src/components"],
      "@pages": ["src/pages"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/pages/Home/index.tsx"],
  "exclude": ["node_modules"]
}
